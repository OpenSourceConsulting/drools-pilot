<?xml version="1.0" encoding="UTF-8"?>
<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:7.2 http://www.infinispan.org/schemas/infinispan-config-7.2.xsd
                            urn:infinispan:config:store:remote:7.2 http://www.infinispan.org/schemas/infinispan-cachestore-remote-config-7.2.xsd"
        xmlns="urn:infinispan:config:7.2">
    <cache-container default-cache="niceCache">
    	
    	<local-cache name="niceCache">
    	
    		<persistence>
			   <remote-store xmlns="urn:infinispan:config:store:remote:7.2" cache="mycache" raw-values="true">
			      <remote-server host="nice-osc-db.cloudapp.net" port="11222" />
			      <connection-pool max-active="10" exhausted-action="CREATE_NEW" />
			   </remote-store>
			</persistence>
    	</local-cache>
	</cache-container>
</infinispan>